<!-- Central space -->

%div{class:'central-space'}
    %div{class:'row'}
        %div{class:"col-md-4"}
            %img{src:'assets/images/logoWIP.png', class:'main-logo', alt:'Brokuł trzymający wagę'}
        %div{class:'col-md-6'}
            %h1{class:'app-name'}='OK Menadżer żywienia'
            %p{class:'catch-phrase'}='Zobacz to co jesz w innym świetle' 
            = link_to 'Zarejestruj się już teraz!', modal_path(body: 'index/register', title: 'Rejestracja'), remote: true, 'data-toggle' =>  "modal", 'data-target' => '#modal-holder', class:'big-register-btn'   

<!-- invitations -->

%div{class:'container'}
%div{class:'row'}
    %div{class:'col-sm-6 col-md-4'}
        %div{class:'thumbnail'}
            %div{class:'caption'}
                %h3='Oblicz'
                %p='Dowiedz się, jakie jest Twoje dzienne zapotrzebowanie na kalorie, mikro- i makroelementy oraz pierwiastki.'
                %img{src:'assets/images/oblicz.png', alt:'Symbole i nazwy różnych składników odżywczych', class:'stamp'}
      
    %div{class:'col-sm-6 col-md-4'}
        %div{class:'thumbnail'}
            %div{class:'caption'}
                %h3='Wprowadzaj'
                %p='W łatwy sposób swoje posiłki'
                %img{src:'assets/images/zapisz.png', alt:'Kartka papieru z długopisem', class:'stamp'}
     
    %div{class:'col-sm-6 col-md-4'}
        %div{class:'thumbnail'}
            %div{class:'caption'}
                %h3='Sprawdź'
                %p='Przejrzyste wykresy i tabelki powiedzą Ci czy zapewniasz sobie odpowiednią ilość składników odżywczych.'
                %img{src:'assets/images/ogladaj.png', alt:'Wykres', class:'stamp'}
           



