%html
  %head
    %title='OK Menadżer Żywienia'
    = csrf_meta_tags 
    = csp_meta_tag 

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' 
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload' 
    %link{ rel: 'stylesheet', href: '/assets/style.css' }
    %link{ rel: 'stylesheet', href:'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', integrity:'sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin:'anonymous' }  
    %link{ href: 'https://fonts.googleapis.com/css?family=Anton|Cherry+Swash|Raleway&display=swap', rel:'stylesheet'} 
    %link{ href: '/assets/images/favicon.ico', rel:'shortcut icon', type:'image/x-icon' }
    %link{ rel:'stylesheet', href:'//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css'}
    %script{ src:'https://kit.fontawesome.com/ad1b725d71.js', crossorigin:'anonymous'}
    %script{ src:'https://code.jquery.com/jquery-3.4.1.min.js'}
    %script{ src:'https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js', integrity:'sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo', crossorigin:'anonymous'}
    %script{ src:'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js', integrity:'sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6', crossorigin:'anonymous'}
    %script{ src:'https://code.jquery.com/ui/1.12.1/jquery-ui.js'}

  #modal-holder  

  %body
    #header
      %nav{class:'navbar navbar-light nav-display nav justify-content-end', style:'background-color:#068506'}
        %div{class:'btn-group nav-display', role:'group'}
        - if session[:sessionID]
          = link_to 'Wyloguj', logout_path, class:'btn-nav-menu nav-display'      
        - else
          = link_to 'Rejestracja', modal_path(body: 'index/register', title: 'Rejestracja'), remote: true, 'data-toggle' =>  "modal", 'data-target' => '#modal-holder', class:'btn-nav-menu nav-display'   
          = link_to 'Logowanie', modal_path(body: 'index/login', title: 'Logowanie'), remote: true, 'data-toggle' =>  "modal", 'data-target' => '#modal-holder', class:'btn-nav-menu nav-display'      

    - if session[:sessionID]     
      #menu
        %div{class:'row'}
          %div{class:'col-md-2'}
            %img{src:'/assets/images/logoWIP.png', class:'medium-logo', alt:'Brokuł trzymający wagę'}
          %div{class:'col-md-10'}
            %ul{class:'nav justify-content-end'}
              %li{class:'nav-item'}
                = link_to 'Moje Dane', profile_path, class: 'nav-link'
              %li{class:'nav-item'}
                = link_to 'O aplikacji', about_path, class: 'nav-link'

    #content
      = yield 
    #footer
      %hr
      %p='App created by O.Kierkowska for WWSI: Praca inżynierska 2020. All right reserved.'
      
  
