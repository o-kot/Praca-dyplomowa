#error{class:'alert alert-danger', role:'alert', style:'display:none'}

%div{style: 'display: none'}
    = link_to '', modal_path(body: 'recipes/measure', title: 'Wybierz sposób pomiaru potrawy'), id:'measure'

%h5{class:'modal-inside-header'}=@recipe.Name


%form{id:'complete-recipe-form', action:'/weightProducts', method:'post', 'data-remote' => 'true'}
    %input{name: 'authenticity_token',type:'hidden', value:"#{form_authenticity_token}"}
    %div{class:'form-group row'}
        %input{name:'recipe', type:'hidden', value:@recipe.id}
    - @productList.each do |product|
        %div{class:'form-group row'}
            %label{for:'ingredient', class:'col-sm-4 col-form-label'}=product[1]
            %div{class:'col-sm-8'}
                %input{name:'ingredientWeight[]', type:'text', class:'form-control', placeholder:@productWeightList[product[0]]}
                %input{name:'ingredientID[]', type:'hidden', value:product[0]}
    %div{class:'form-check'}
        %input{type:'checkbox', class:'form-check-input', name:'goToPortioning', checked:'true'}
        %label{class:'form-check-label', for:'goToPortioning'}='Czy chcesz od razu porcjować lub zważyć?'

    %div{class:'form-group row justify-content-end'}
        %input{class: 'btn-form', type:'submit', value:'Zapisz'}

%script
    $(document).off('ajax:success').on('ajax:success',function(event){
    var xhr = event.detail[2];
    if(xhr.responseText == "Go to portioning"){

    $.ajax({
    url: $('#measure').attr('href'),  dataType: 'json',
    success: function() {  },
    error: function(data) {
    $('.modal-backdrop').remove();
    eval(data.responseText);
    }
    });
    }
    else if(xhr.responseText == "success"){
    $("#success").css("display","block");
    $("#error").css("display","none");
    }
    else if(xhr.responseText == "error"){
    $("#error").css("display","block");
    $("#success").css("display","none");
    }
    });
    $(".btn-close").click(function () {
    if(confirm("Czy na pewno chcesz zamknąć to okno?"))
    $(".modal").modal('hide');
    });