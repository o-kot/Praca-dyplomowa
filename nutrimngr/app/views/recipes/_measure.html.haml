#error{class:'alert alert-danger', role:'alert', style:'display:none'}

- @idr = ''

- if params['recipe'].present?
    - @idr = params['recipe']
- elsif @recipe.present?
    - @idr = @recipe.id

%form{id:'measure-recipe-form', action:'/measureRecipe', method:'post', 'data-remote' => 'true'}
    %input{name: 'authenticity_token',type:'hidden', value:"#{form_authenticity_token}"}
    %div{class:'form-group row'}
        %input{name:'recipe', type:'hidden', value: @idr}
    %div{class:'form-group row justify-content-center'}
        %div{class:'col'}
            %div{class:'row justify-content-center'}
                %div{class:'form-check form-check-inline'}
                    %input{class:'form-check-input', type:'radio', name:'howToMeasure', id:'weight', value:'weight'}
                    %label{class:'form-check-label', for:'weight'}
                        %i{class:'fas fa-balance-scale fa-big'}
        %div{class:'col'}
            %div{class:'row justify-content-center'}
                %div{class:'form-check form-check-inline'}           
                    %input{class:'form-check-input', type:'radio', name:'howToMeasure', id:'portions', value:'portions'}
                    %label{class:'form-check-label', for:'portions'}
                        %i{class:'fas fa-cheese fa-big'}
    %div{class:'row'}
        %div{class:'col'}
            %div{class:'row justify-content-center'}    
                %label{class:'label-mini'}='Waga ca≈Çkowita'
        %div{class:'col'}
            %div{class:'row justify-content-center'}
                %label{class:'label-mini'}='Liczba porcji'
    %div{class:'form-group row justify-content-center', style:'margin-top:40px'}
        %div{class:'col-11'}
            %input{name:'measurement', type:'text', class:'form-control form-control-obligatory'}

    %div{class:'form-group row justify-content-end', style:'margin-right:10px'}
        %input{class: 'btn-form', type:'submit', value:'Zapisz'}
