-# Top central space

%div{class:'top-space'}
    %div{class:'row centered-for-flex'}
        - if @products.nil?
            %div{class:'col-md-6'}
                %h4="Nie został jeszcze dodany żaden produkt własny."
            %div{classs:'col-md-1'}
                = link_to 'Dodaj produkt', modal_path(body: 'user_products/add', title: 'Wprowadź dane produktu', size: 'lg'), remote: true, 'data-toggle' =>  'modal', 'data-target' => '#modal-holder', class:'btn-form link-adjustements'   
        - else  
            %div{class:'col-md-6'}
                %form{class:'form-inline', action:'/searchUserProducts', method:'post'}
                    %input{class:'form-control mr-sm-2', type:'search', placeholder:'Wyszukaj', 'aria-label' => 'Search'}
                    %button{class:'btn btn-outline-success my-2 my-sm-0', type:'submit'}
                        %i{class:'fas fa-search btn-add'}
            %div{classs:'col-md-1'}
                = link_to 'Dodaj produkt', modal_path(body: 'user_products/add', title: 'Wprowadź dane produktu'), remote: true, 'data-toggle' =>  'modal', 'data-target' => '#modal-holder', class:'btn-form'     
