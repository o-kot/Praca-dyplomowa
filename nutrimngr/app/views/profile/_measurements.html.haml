        %input{name: 'authenticity_token',type:'hidden', value:"#{form_authenticity_token}"}
        %div{class:'form-group row'}
            %label{for:'edited', class:'col-sm-4 col-form-label'}='Waga'
            %div{class:'col-sm-8'}
                %input{name:"edited", type:'text', class:'form-control', placeholder:'70.2'}
                #emailHelp{class:'form-text text-muted'}='Wprowadź swoją wagę w kilogramach.'
        %div
            %input{type:'hidden', name:'what',value:'1'}
            %input{class: 'btn-form', type:'submit', value:'Zapisz'}    

