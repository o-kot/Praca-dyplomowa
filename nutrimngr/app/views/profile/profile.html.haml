-# Top central space

%div{class:'top-space'}
    %div{class:'row'}
        - if !@requisition.userRequisitionTargetCalories.nil?
            %h4='Żeby osiągnąć swój cel powinieneś spożywać: #{@requisition.tagetCalories} kcal dziennie'
            %input{class: 'btn-form', type:'submit', value:'Przelicz ponownie'}
        - else   
        %div{class:'col-md-10'}     
            %h3='Wprowadź swoje dane, żeby obliczyć swoje zapotrzebowanie energetyczne'
        %div{classs:'col-md-1'}
            %input{class:'btn-form btn-calculate', style:'margin-top:0px;', type:'submit', value:'Oblicz'}
        #error{class:'alert alert-danger', role:'alert', style:'display:none'}
        #advice{class:'alert alert-warning', role:'alert', style:'display:none'}


-# Forms

%div{class:'container'}
    %div{class:'row'}
        #data{class:'col-sm-6 col-md-4'}
            %h4{class:'inside-header'}='Moje dane'
            - if @data.userDataHeight.present?
                %p="Wzrost: #{@data.userDataHeight} cm"
                %input{class: 'btn-form', type:'submit', value:'Edytuj'}
                %p="Data urodzenia: #{@data.userDataBirthDay}"
                %input{class: 'btn-form', type:'submit', value:'Edytuj'}
                %p
                    ='Płeć: '
                    - if @data.userDataIsWoman
                        ='Kobieta'
                    - else
                        ='Mężczyzna'
                %input{class: 'btn-form', type:'submit', value:'Edytuj'}
            - else                    
                %p='Nie wprowadziłeś jeszcze swoich danych'
                = link_to '', modal_path(body: 'profile/data', title: 'Moje dane', which: 'all'), remote: true, 'data-toggle' =>  'modal', 'data-target' => '#modal-holder', class:'fas fa-plus-square btn-add'   
        
        #measurement{class:'col-sm-6 col-md-4'}
            %h4{class:'inside-header'}='Moje wymiary'
            - if @measurements.userMeasurementsWeight.present?
                %p="Waga: #{@measurements.userMeasurementsWeight} kg"
                %input{class: 'btn-form', type:'submit', value:'Edytuj'}
                %p="Obwód pasa: #{@measurements.userMeasurementsWaist} cm"
                %input{class: 'btn-form', type:'submit', value:'Edytuj'}
                %p="Obwód bioder: #{@measurements.userMeasurementsHips} cm"
                %input{class: 'btn-form', type:'submit', value:'Edytuj'}
            - else                    
                %p='Nie wprowadziłeś jeszcze swoich wymiarów'           
                = link_to '', modal_path(body: 'profile/measurements', title: 'Moje wymiary', which: 'all'), remote: true, 'data-toggle' =>  'modal', 'data-target' => '#modal-holder', class:'fas fa-plus-square btn-add'   
        
        %div{class:'col-sm-6 col-md-4'}
            #activity
                %h4{class:'inside-header'}='Stopień aktywności fizycznej'
                - if @data.userDataActivityID.present?
                    %p="Twój stopień aktywności fizycznej: #{@activity.activityDesciption}"
                    %input{class: 'btn-form', type:'submit', value:'Zmień'}
                - else                        
                    %div
                    = render :partial => 'activity'
        
            #target-part
                %h4{class:'inside-header'}='Moj cel'
                - if @data.userDataTargetID.present?
                    %p="Twój cel to: #{@target.TargetDescription}"
                    %input{class: 'btn-form', type:'submit', value:'Zmień'}
                - else                        
                    %div    
                        = render :partial => 'target'