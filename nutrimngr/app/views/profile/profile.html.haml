-# Forms

%div{class:'container'}
    %div{class:'row'}
        %div{class:'col-sm-6 col-md-4'}
            %h3='Moje dane'
            -# - if @Data.height.present?
                -# %p="Wzrost: #{@Data.height} cm"
                    %input{class: 'btn-form', type:'submit', value:'Edytuj'}
                -# %p="Data urodzenia: #{@Data.birthDate}"
                -# %input{class: 'btn-form', type:'submit', value:'Edytuj'}
                -# %p
                    ='Płeć: '
                    - if @Data.isWoman
                        ='Kobieta'
                    - else
                        ='Mężczyzna'
                    %input{class: 'btn-form', type:'submit', value:'Edytuj'}
            -# else
                    
            %p='Nie wprowadziłeś jeszcze swoich danych'
            = link_to 'Wprowadź dane', modal_path(body: 'profile/data', title: 'Moje dane'), remote: true, 'data-toggle' =>  'modal', 'data-target' => '#modal-holder', class:'btn-form'   
        
        %div{class:'col-sm-6 col-md-4'}
            %h3='Moje wymiary'
            -# - if @UMeasurement.weight.present?
                -# %p="Waga: #{@Measurement.weight} kg"
                    %input{class: 'btn-form', type:'submit', value:'Edytuj'}
                %p="Obwód pasa: #{@Measurement.waist} cm"
                    %input{class: 'btn-form', type:'submit', value:'Edytuj'}
                %p="Obwód bioder: #{@Measurement.hips} cm"
                    %input{class: 'btn-form', type:'submit', value:'Edytuj'}
            -# else
                    
            %p='Nie wprowadziłeś jeszcze swoich wymiarów'
            = link_to 'Wprowadź wymiary', modal_path(body: 'profile/measurements', title: 'Moje wymiary'), remote: true, 'data-toggle' =>  'modal', 'data-target' => '#modal-holder', class:'btn-form'   
        
        %div{class:'col-sm-6 col-md-4'}
            %h3='Stopień aktywności fizycznej'
            -# - if @Data.IDA.present?
                -# %p="Twój stopień aktywności fizycznej: #{@Activity.desc}"
                    %input{class: 'btn-form', type:'submit', value:'Zmień'}
            -# else
                    
            %div
            = render :partial => 'activity'
        
        %div{class:'col-sm-6 col-md-4'}
            %h3='Moj cel'
            -# - if @Data.IDT.present?
